<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.msi.stockmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StockManager">

        <activity
            android:name=".ui.main.analysis.AnalysisActivity"
            android:exported="false"
            android:label="@string/title_activity_analysis" />
        <activity
            android:name=".ui.main.news.NewsActivity"
            android:exported="false"
            android:label="@string/title_activity_news"
            android:theme="@style/Theme.StockManager.NoActionBar" />
        <activity
            android:name=".ui.main.trans_history.TransHistoryActivity"
            android:exported="true"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockManager.NoActionBar" />
        <activity
            android:name=".ui.main.LaunchActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockManager.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.setting.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.form.FormActivity"
            android:exported="true"
            android:label="@string/title_activity_compose"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockManager"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.main.overview.OverviewActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockManager.NoActionBar" />
        <activity
            android:name=".ui.main.pager.PagerActivity"
            android:exported="true"
            android:label="@string/title_activity_pager"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StockManager.NoActionBar" />
        <activity
            android:name=".DatabaseDemoActivity"
            android:exported="true"
            android:label="TransApi Demo page"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InputCashInOut"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HttpDemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".KlineViewActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>